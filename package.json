{
  "name": "graphql_server",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "json:server": "json-server --watch data.json --port 4100",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run json:server\" \"npm run server\" \"npm run client\""
  },
  "nodemonConfig": {
    "ignore": [
      "data.json"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "concurrently": "^5.0.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.5.8",
    "json-server": "^0.15.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.2"
  }
}
